import numpy as np
import pandas as pd

orders = pd.read_csv('orders.csv')
# print(orders.head(5))
shoe_counts = orders.groupby(['shoe_type', 'shoe_color']).id.count().reset_index()

shoe_counts_colors = orders.groupby('shoe_color').id.count().reset_index()

print(shoe_counts_colors)
print('\n')

print(shoe_counts)
print('\n')

maxm = shoe_counts.groupby('id').max()
print(maxm)